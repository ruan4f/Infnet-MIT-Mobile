<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NuncaCaiMobile.Views.PlayersPage"
             Title="Jogadores">
    <ContentPage.Resources>
        <StyleSheet Source="/Assets/styles.css" />
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout Margin="15">
            <ListView x:Name="ListView_Players"
                CachingStrategy="RecycleElement"
                HasUnevenRows="True"
                SeparatorColor="White">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="10">
                                <Label x:Name="LabelName" Text="{Binding Name}" LineBreakMode="NoWrap"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button x:Name="Btn_AddPlayer" StyleClass="btn-primary" Text="Novo Jogador" HorizontalOptions="FillAndExpand" Command="{Binding ShowAddCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>